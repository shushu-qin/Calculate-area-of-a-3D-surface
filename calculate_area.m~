elem = 1;
nen = 3;
ngaus = 3;
[zgp,wgp] = Quadrature(elem, ngaus) ;
[N,Nxi,Neta] = ShapeFunc(elem,nen,zgp); 
area = 0;
filename = 'mesh_data.txt';
[connect coord] = readData(filename);
%%%%%%%%%-------2D---------%%%%%%%%%%%%
% Xe = [-1,0;
%       1,0;
%       0,1;
%       0,-0.2;
%       0.4,0.5;
%       -0.4,0.5];
% for ig = 1:ngaus  
%     N_ig    = N(ig,:);
%     Nxi_ig  = Nxi(ig,:);
%     Neta_ig = Neta(ig,:);
% 
%     Jacob = [Nxi_ig(1:nen); Neta_ig(1:nen)]*Xe;
%     J = det(Jacob); 
%     
%     area = area + J*wgp(ig);
% end
% 
% area
%%%%%---------3D--------%%%%%%
for i = 1:size(connect,1)
    
end
Xe = [-1,0,0;
      0,1,0;
      0,0,1];
for ig = 1:ngaus  
    N_ig    = N(ig,:);
    Nxi_ig  = Nxi(ig,:);
    Neta_ig = Neta(ig,:);

    Jacob = [Nxi_ig(1:nen); Neta_ig(1:nen)]*Xe;
    
    Jx = det(Jacob(:,1:2));
    Jy = det(Jacob(:,2:3));
    Jz = det(Jacob(:,[1,3]));
    area = area + norm([Jx,Jy,Jz])*wgp(ig);
end


